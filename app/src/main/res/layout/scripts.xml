<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/scripts_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/verticalseperator"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/scripts_url_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/verticalseperator"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:text="8 script URL found"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/scripts_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:layout_toStartOf="@+id/verticalseperator"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:text="12 script tags"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <ListView
        android:id="@+id/scripts_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/scripts_card_view"/>
</RelativeLayout>
